{
    "name": "@king-casino/slot-base",
    "version": "0.0.1",
    "description": "Base slot machine logic shared between multiple games",
    "source": "src/main.ts",
    "main": "lib/main.js",
    "module": "lib/module.js",
    "types": "lib/main.d.ts",
    "scripts": {
        "dev": "nodemon -e ts -w src --exec \"npm run build\"",
        "build": "npm run build:src && npm run build:tsd",
        "build:src": "parcel build --no-optimize",
        "build:tsd": "tsc -d --emitDeclarationOnly"
    },
    "dependencies": {
        "@toolcase/base": "^1.0.14",
        "@toolcase/logging": "^0.3.12",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "peerDependencies": {
        "pixi.js": "^7.x.x"
    },
    "targets": {
        "types": false,
        "main": {
            "optimize": false
        },
        "module": {
            "optimize": false
        }
    },
    "author": {
        "name": "Daniel Kalevski",
        "url": "https://kalevski.dev"
    },
    "directories": {
        "lib": "lib"
    },
    "files": [
        "lib"
    ],
    "license": "MIT",
    "devDependencies": {
        "@parcel/transformer-typescript-tsc": "^2.8.3",
        "@types/react-dom": "^18.2.4",
        "typescript": "^5.0.4"
    }
}
